<SM>:
    Page1:
        name: 'page1'
        id: page_1
    Page2:
        name: 'page2'
        id: page_2
<Page1>:
    mdlistid:mdlistid
    elempower:elempower
    elemcount: elemcount
    predictlistid:predictlistid
    recommend_list:recommend_list
    MDBottomNavigation:
        panel_color:.2,.2,.2,1
        MDBottomNavigationItem:
            name: 'home'
            text: 'Home'
            icon:'home'
            md_bg_color:56/255,40/255,81/255,1
            MDBoxLayout:
                orientation:'vertical'
                MDToolbar:
                    #title: 'Menu'
                    left_action_items: [["menu", lambda x: app.callback(x)]]

                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:.25
                    padding:dp(25)

                    MDBoxLayout:
                        orientation:"vertical"
                        Image:
                            source:"images/kuteam_logo2.png"
                            size: self.texture_size
                            halign:"center"

                MDGridLayout:
                    size_hint_y:0.7
                    cols:2
                    padding:[dp(15),dp(15),dp(15),dp(35)]
                    spacing:dp(15)

                    ElementCard:
                        text:"House"
                        subtext:"KU Villa"
                    ElementCard:
                        text:"Location"
                        subtext:"Mohammed bin Rashid Al Maktoum Solar Park"
                    ElementCard:
                        id: elempower
                        text: "Total power consumption"
                    ElementCard:
                        id: elemcount
                        text:"Devices Turned On"
                        #subtext: num_devices

        MDBottomNavigationItem:
            name: 'devices'
            text: 'Devices'
            icon: 'devices'

            MDBoxLayout:
                orientation: 'vertical'
                Button:
                    size_hint_y:.1
                    text: 'Seek Devices'
                    font_name: 'RobotoCondensed'
                    on_release: root.create_new_item()
                MDList:
                    size_hint_y:.9
                    id: mdlistid
        MDBottomNavigationItem:
            name: 'predictions'
            text: 'Predictions'
            icon: 'calendar-text'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Get Predictions'
                    font_name: 'RobotoCondensed'
                    size_hint_y:.1
                    on_release: root.get_predictions()
                ScrollView:
                    MDList:
                        height: self.minimum_height
                        size_hint_y:.9
                        id: predictlistid
        MDBottomNavigationItem:
            name: 'recommendations'
            text: 'Recommendations'
            icon: 'lightbulb-multiple-outline'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    id: date_button
                    text: 'Click me to set date!'
                    font_name: 'RobotoCondensed'
                    size_hint_y: .1
                    on_release: root.show_date_picker()
                Button:
                    id: time_button
                    text: 'Click me to set time!'
                    font_name: 'RobotoCondensed'
                    size_hint_y : .1
                    on_release: root.show_time_picker()
                Button:
                    text: 'Click for Recommendations!'
                    font_name: 'RobotoCondensed'
                    size_hint_y: .1
                    on_release: root.get_recommendations()
                MDList:
                    size_hint_y:.7
                    id:recommend_list


<Page2>:
    MDToolbar:
        pos: 0, 550
        MDLabel:
            id: plug_name
    Button:
        id: test
        font_name: 'RobotoCondensed'
        size_hint_y: .1
        on_release: root.manager.current = 'page1'

    MDGridLayout:
        size_hint_y: .4
        cols: 2
        pos: 0, 200
        ElementCard:
            id: current_power
        ElementCard:
            id: today_power
        ElementCard:
            id: monthly_power
        ElementCard:
            id: status


<ElementCard@MDCard>:
    md_bg_color: 238/255,239/255,241/255,1
    padding:dp(15)
    spacing:dp(15)
    radius:dp(10)
    ripple_behavior: True
    image:''
    text:""
    subtext:""

    orientation:'vertical'
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"left"
            text:root.text
            bold: True
            font_name: 'RobotoCondensed'
            font_size: self.width/20
        MDLabel:
            halign:"left"
            text:root.subtext
            font_name: 'RobotoCondensed'
            font_size: self.width/20
            text_color:16/255,90/255,154/255,1
