MDBoxLayout:
    orientation:'vertical'
    MDToolbar:
        title: 'SaveSmart'
        md_bg_color: .2, .2, .2, 1
    MDBottomNavigation:
        panel_color: .2, .2, .2, 1

        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'Dashboard'
            GridLayout:
                id: readings
                col: 2

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Devices'
            MDSwitch:
                on_active: app.check(*args)
            ScrollView:
                MDList:
                    id: devices

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Predictions'
            ScrollView:
                MDList:
                    OneLineListItem:
                        text: "Predictions go here!"


        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Recommendations'

            MDLabel:
                text: 'Recommendations'
                halign:'center'
            


